{
  "name": "@manuscripts/json-schema",
  "version": "1.1.0",
  "description": "Schema for models used in Manuscripts applications, plus validator functions for Sync Gateway",
  "repository": "github:Atypon-OpenSource/manuscripts-json-schema",
  "license": "Apache-2.0",
  "main": "./dist/cjs",
  "module": "./dist/es",
  "types": "./dist/types",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm-run-all generate:build generate:run build:cjs build:es",
    "build:cjs": "tsc --outDir dist/cjs --module commonjs",
    "build:es": "tsc --outDir dist/es --declarationDir dist/types --declaration",
    "generate:build": "tsc --project tsconfig.bin.json",
    "generate:run": "node tsc-dist/index.js",
    "lint": "eslint src tests --ext .js,.ts",
    "format": "prettier --write '{src,schemas_src,tests}/**/*.{ts,js,json}'",
    "prebuild": "rimraf tsc-dist/* dist/* schemas/* definitions/*",
    "pretest": "npm run build",
    "pretest:ci": "npm run build",
    "test": "scripts/test.sh",
    "test:ci": "scripts/test-ci.sh",
    "typecheck": "tsc --noEmit",
    "docs": "npm run build && npx docson -d ./schemas/"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "deepmerge": "^4.3.1",
    "js-beautify": "^1.14.7"
  },
  "devDependencies": {
    "@types/js-beautify": "^1.13.3",
    "@types/node": "^11.11.3",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "json-schema-to-typescript": "^12.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "tap-dot": "^2.0.0",
    "tap-junit": "^5.0.2",
    "tape": "^5.6.1",
    "typescript": "^4.9.5",
    "docson": "^2.1.0"
  }
}
