{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": false,
    "declaration": false,
    "outDir": "./tsc-dist",
    "lib": ["esnext"],
    "types": ["node"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedParameters": true
  },
  "include": ["bin/**/*.ts"]
}
