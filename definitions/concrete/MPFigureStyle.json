{
  "$id": "MPFigureStyle.json",
  "type": "object",
  "$mash": {
    "sources": [
      { "$ref": "abstract/MPStyle.json#" }
    ],
    "with": {
      "properties": {
        "captionPosition": {
          "type": "string",
          "enum": [ "above", "top", "bottom",  "below" ]
        },
        "innerBorder": {
          "$ref": "MPBorder.json#"
        },
        "innerSpacing": {
          "type": "number"
        },
        "outerBorder": {
          "$ref": "MPBorder.json#"
        },
        "outerSpacing": {
          "type": "number"
        },
        "preferredXHTMLElement": {
          "type": "string"
        }
      },
      "required": [
        "captionPosition",
        "innerBorder",
        "outerBorder"
      ]
    }
  }
}
