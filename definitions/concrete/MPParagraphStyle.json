{
  "$id": "MPParagraphStyle.json",
  "type": "object",
  "$mash": {
    "sources": [
      { "$ref": "abstract/MPStyle.json#" }
    ],
    "with": {
      "properties": {
        "alignment": {
          "type": "string"
        },
        "bottomSpacing": {
          "type": "number"
        },
        "embeddedListItemBulletStyles": {
          "type": "object",
          "patternProperties": {
            "^\\d+$": { "$ref": "MPListItemBulletStyle.json#" }
          },
          "additionalProperties": false
        },
        "embeddedListItemNumberingStyles": {
          "type": "object",
          "patternProperties": {
            "^\\d+$": { "$ref": "MPNumberingStyle.json#" }
          },
          "additionalProperties": false
        },
        "firstLineIndent": {
          "type": "number"
        },
        "headIndent": {
          "type": "number"
        },
        "hideListNumberingSuffixForLastLevel": {
          "type": "boolean"
        },
        "hierarchicalListNumbering": {
          "type": "boolean"
        },
        "kind": {
          "type": "string"
        },
        "lineSpacing": {
          "type": "number"
        },
        "listItemIndentPerLevel": {
          "type": "number"
        },
        "listHeadIndent": {
          "type": "number"
        },
        "listTailIndent": {
          "type": "number"
        },
        "nextStyle": {
          "$ref": "strings.json#/definitions/_id"
        },
        "partOfTOC": {
          "type": "boolean"
        },
        "preferredXHTMLElement": {
          "type": "string"
        },
        "sectionNumberingStyle": {
          "$ref": "MPNumberingStyle.json#"
        },
        "tailIndent": {
          "type": "number"
        },
        "textStyling": {
          "$ref": "MPTextStyling.json#"
        },
        "topSpacing": {
          "type": "number"
        }
      },
      "required": [
        "alignment",
        "firstLineIndent",
        "headIndent",
        "kind",
        "lineSpacing",
        "partOfTOC",
        "preferredXHTMLElement",
        "tailIndent",
        "topSpacing"
      ]
    }
  }
}
