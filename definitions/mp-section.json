{
  "$id": "mp-section.json",
  "type": "object",
  "$merge": {
    "source": {
      "$ref": "mp-managed-object.json#",
      "additionalProperties": false
    },
    "with": {
      "additionalProperties": false,
      "properties": {
        "placeholderTitle": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "priority": {
          "type": "number"
        },
        "elementIDs": {
          "type": "array",
          "items": [
            { "$ref": "strings.json#/definitions/_id" }
          ],
          "additionalItems": false
        },
        "path": {
          "type": "array",
          "items": [
            { "$ref": "strings.json#/definitions/_id" }
          ],
          "additionalItems": false
        }
      }
    }
  }
}
