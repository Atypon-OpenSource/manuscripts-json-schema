{
  "$id": "mp-section.json",
  "type": "object",
  "$mash": {
    "source": {
      "$ref": "mp-managed-object.json#"
    },
    "with": {
      "properties": {
        "placeholderTitle": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "priority": {
          "type": "number"
        },
        "elementIDs": {
          "type": "array",
          "items": [
            { "$ref": "strings.json#/definitions/_id" }
          ],
          "additionalItems": false
        },
        "path": {
          "type": "array",
          "items": [
            { "$ref": "strings.json#/definitions/_id" }
          ],
          "additionalItems": false
        }
      },
      "required": [
        "priority",
        "path"
      ]
    }
  }
}
