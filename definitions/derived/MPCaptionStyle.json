{
  "$id": "MPCaptionStyle.json",
  "type": "object",
  "$mash": {
    "sources": [
      { "$ref": "base/MPStyle.json#" }
    ],
    "with": {
      "properties": {
        "embeddedCaptionComponents": {
          "type": "array",
          "items": [
            { "$ref": "MPStyleableStringComponent.json#" }
          ]
        },
        "embeddedFigureTitleComponents": {
          "type": "array",
          "items": [
            { "$ref": "MPStyleableStringComponent.json#" }
          ]
        },
        "figureTitleNumberingScheme": {
          "type": "string",
          "enum": [
            "decimal"
          ]
        }
      },
      "required": [
        "embeddedCaptionComponents"
      ]
    }
  }
}
