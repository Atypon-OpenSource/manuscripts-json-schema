{
  "$id": "mp-paragraph-style.json",
  "type": "object",
  "$mash": {
    "source": { "$ref": "mp-style.json#" },
    "with": {
      "properties": {
        "firstLineIndent": {
          "type": "number"
        },
        "path": {
          "type": "array",
          "additionalItems": false,
          "items": [
            { "$ref": "strings.json#/definitions/_id" }
          ]
        }
      },
      "required": [
        "firstLineIndent",
        "path"
      ]
    }
  }
}
