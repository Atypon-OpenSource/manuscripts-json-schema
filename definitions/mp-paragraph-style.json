{
  "$id": "mp-paragraph-style.json",
  "type": "object",
  "$merge": {
    "source": {
      "$ref": "mp-style.json#",
      "additionalProperties": false
    },
    "with": {
      "additionalProperties": false,
      "properties": {
        "firstLineIndent": {
          "type": "number"
        },
        "path": {
          "type": "array",
          "additionalItems": false,
          "items": [
            { "$ref": "strings.json#/definitions/_id" }
          ]
        }
      }
    }
  }
}
