{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": false,
    "declaration": false,
    "outDir": "./dist",
    "lib": ["esnext"],
    "types": ["node"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.template.ts", "**/__test__/**"]
}
