{
  "$id": "MPValidationResult.json",
  "type": "object",
  "$mash": {
    "sources": [
      { "$ref": "abstract/MPModel.json#" },
      { "$ref": "mixins/MPContainedDocument.json#" },
      { "$ref": "mixins/MPManuscriptDocument.json#" }
    ],
    "with": {
      "properties": {
        "objectType": {
          "type": "string",
          "enum": ["MPValidationResult"]
        },
        "type": {
          "type": "string"
        },
        "passed": {
          "type": "boolean"
        },
        "severity": {
          "type": "number"
        },
        "fix": {
          "type": "boolean"
        },
        "message": {
          "type": "string"
        }
      },
      "required": ["type", "passed", "severity"]
    }
  }
}
