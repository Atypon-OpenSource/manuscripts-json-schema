              },
              "role": {
                "type": "integer",
                "enum": [0, 1]
              }
            },
            "required": ["userId", "sgUserId", "role"]
          }
        },
        "publicationAccess": {
          "type": "object",
          "properties": {
            "type": {
              "type": "integer",
              "enum": [0, 1, 2, 3, 4]
            },
            "value": {
              "type": "string"
            },
            "access": {
              "type": "integer",
              "enum": [0, 1, 2]
            }
          },
          "required": ["type", "value"]
        },
        "pdId": {
          "type": ["string", "null"]
        },
        "removed": {
          "type": "boolean"
        },
        "siteUrl": {
          "type": "string"
        },
        "section": {
          "type": ["string", "null"]
        },
        "text": {
          "type": ["string", "null"]
        },
        "quoteHTML": {
          "type": ["string", "null"]
        },
        "issn": {
          "type": ["string", "null"]
        },
        "context": {
          "type": "object",
          "properties": {
            "back": { "type":  "string" },
            "front": { "type":  "string" }
          }
        },
        "contextRanges": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "contentType": {
                "type": "string"
              },
              "page": {
                "type": "string"
              },
              "context": {
                "type": "string"
              },
              "certainty": {
                "type": "number"
              },
              "offset": {
                "type": "number"
              },
              "offset_h": {
                "type": "number"
              },
              "offset_t": {
                "type": "number"
              },
              "ranges": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "start": {
                      "type": "string"
                    },
                    "end": {
                      "type": "string"
                    },
                    "startOffset": {
                      "type": "number"
                    },
                    "endOffset": {
                      "type": "number"
                    },
                    "certainty": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        },
        "pathSubjects": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "fontFamilies": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "publicationId": {
          "type": "string"
        },
        "dateInserted": {
          "type": "integer"
        },
        "sendResolutionMessageToSubmitter": {
          "type": "boolean"
        },
        "subjects": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["users"]
    }
  }
}
