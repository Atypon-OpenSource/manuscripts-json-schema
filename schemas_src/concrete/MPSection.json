{
  "$id": "MPSection.json",
  "title": "Section",
  "type": "object",
  "$mash": {
    "sources": [
      { "$ref": "abstract/MPModel.json#" },
      { "$ref": "mixins/MPContainedDocument.json#" },
      { "$ref": "mixins/MPManuscriptDocument.json#" }
    ],
    "with": {
      "properties": {
        "placeholderTitle": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "priority": {
          "type": "integer"
        },
        "elementIDs": {
          "type": "array",
          "items": {
            "$ref": "strings.json#/definitions/_id"
          },
          "additionalItems": false
        },
        "objectType": {
          "type": "string",
          "enum": [ "MPSection" ]
        },
        "path": {
          "type": "array",
          "items": {
            "$ref": "strings.json#/definitions/_id"
          },
          "additionalItems": false
        }
      },
      "required": [
        "path"
      ]
    }
  }
}
