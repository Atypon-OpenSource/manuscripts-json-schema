{
  "$id": "MPExternalFile.json",
  "title": "ExternalFile",
  "type": "object",
  "$mash": {
    "sources": [
      { "$ref": "abstract/MPModel.json#" },
      { "$ref": "mixins/MPManuscriptDocument.json#" },
      { "$ref": "mixins/MPContainedDocument.json#" }
    ],
    "with": {
      "properties": {
        "objectType": {
          "type": "string",
          "enum": ["MPExternalFile"]
        },
        "filename": {
          "type": "string"
        },
        "displayName": {
          "description": "Pretty name for display purposes",
          "type": "string"
        },
        "MIME": {
          "type": "string"
        },
        "description": {
          "description": "Text description that can be used as a caption source or play similar role.",
          "type": "string"
        },
        "publicUrl": {
          "$ref": "strings.json#/definitions/uri"
        },
        "designation": {
          "description": "Describes file designation such as supplemental, figure or other.",
          "type": "string"
        },
        "storeId": {
          "description": "Describes an identifier (no specific format, maybe reversed url) for the external store where the external file originates from",
          "type": "string"
        }
      },
      "required": ["filename", "MIME", "designation", "publicUrl"]
    }
  }
}
