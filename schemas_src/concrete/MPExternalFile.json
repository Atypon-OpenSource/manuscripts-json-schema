{
  "$id": "MPExternalFile.json",
  "title": "ExternalFile",
  "type": "object",
  "$mash": {
    "sources": [
      { "$ref": "abstract/MPModel.json#" },
      { "$ref": "mixins/MPContainedDocument.json#" }
    ],
    "with": {
      "properties": {
        "objectType": {
          "type": "string",
          "enum": ["MPExternalFile"]
        },
        "filename": {
          "type": "string"
        },
        "displayName": {
          "type": "string"
        },
        "MIME": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "publicUrl": {
          "$ref": "strings.json#/definitions/uri"
        },
        "designation": {
          "type": "string"
        }
      },
      "required": ["filename", "displayName", "MIME"]
    }
  }
}
