{
  "$id": "MPContributor.json",
  "type": "object",
  "$mash": {
    "sources": [
      { "$ref": "abstract/MPManagedObject.json#" }
    ],
    "with": {
      "properties": {
        "role": { "type": "string" },
        "isMe": { "type": "boolean" },
        "category": { "$ref": "MPContributorCategory.json#" },
        "priority": { "type": "number" },
        "contribution": { "type": "string" },
        "placeholderString": { "type": "string" },
        "appInvitationDate": { "$ref": "numbers.json#/definitions/timestamp" },
        "addressBookIDs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "additionalItems": false
        },
        "objectType": {
          "type": "string",
          "enum": [ "MPContributor" ]
        },
        "prename": { "type": "string" },
        "firstName": { "type": "string" },
        "middleNames": { "type": "string" },
        "lastName": { "type": "string" },
        "fullName": { "type": "string" },
        "bio": { "type": "string" },
        "prefix": { "type": "string" },
        "affiliations": {
          "type": "array",
          "items": {
            "$ref": "MPAffiliation.json#"
          },
          "additionalItems": false
        },
        "grants": {
          "type": "array",
          "items": {
            "$ref": "MPGrant.json#"
          },
          "additionalItems": false
        },
        "email": { "type": "string" },
        "jointContributorGroup": { "type": "number" }
      },
      "required": [
        "firstName",
        "lastName"
      ]
    }
  }
}
