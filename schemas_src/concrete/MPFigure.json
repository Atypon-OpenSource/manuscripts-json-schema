{
  "$id": "MPFigure.json",
  "title": "Figure",
  "type": "object",
  "$mash": {
    "sources": [
      { "$ref": "abstract/MPModel.json#" },
      { "$ref": "mixins/MPContainedDocument.json#" },
      { "$ref": "mixins/MPManuscriptDocument.json#" },
      { "$ref": "mixins/MPAttachmentOwner.json#" },
      { "$ref": "mixins/MPHighlightable.json#" },
      { "$ref": "mixins/MPAttributable.json#" }
    ],
    "with": {
      "properties": {
        "objectType": {
          "type": "string",
          "enum": ["MPFigure"]
        },
        "contentType": {
          "type": "string"
        },
        "src": {
          "type": "string"
        },
        "originalURL": {
          "type": "string"
        },
        "embedURL": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "listingAttachment": { "$ref": "MPListingAttachmentReference.json#" },
        "externalFile": { "$ref": "MPExternalFile.json#" },
        "externalFiles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "_id": {
                "$ref": "strings.json#/definitions/_id"
              },
              "kind": {
                "type": "string"
              }
            },
            "required": ["_id", "kind"]
          }
        }
      },
      "required": []
    }
  }
}
