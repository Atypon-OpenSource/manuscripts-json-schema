{
  "$id": "MPFigure.json",
  "title": "Figure",
  "type": "object",
  "$mash": {
    "sources": [
      { "$ref": "abstract/MPModel.json#" },
      { "$ref": "mixins/MPContainedDocument.json#" },
      { "$ref": "mixins/MPManuscriptDocument.json#" }
    ],
    "with": {
      "properties": {
        "objectType": {
          "type": "string",
          "enum": ["MPFigure"]
        },
        "contentType": {
          "type": "string"
        },
        "src": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "position": {
          "type": "string"
        },
        "externalFileReferences": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "$ref": "strings.json#/definitions/attachmentID"
              },
              "kind": {
                "$ref": "enums.json#/definitions/ExternalFileKind"
              }
            },
            "required": ["url"]
          }
        }
      },
      "required": []
    }
  }
}
