{
  "$id": "MPFigure.json",
  "title": "Figure",
  "type": "object",
  "$mash": {
    "sources": [
      { "$ref": "abstract/MPModel.json#" },
      { "$ref": "mixins/MPContainedDocument.json#" },
      { "$ref": "mixins/MPManuscriptDocument.json#" },
      { "$ref": "mixins/MPAttachmentOwner.json#" },
      { "$ref": "mixins/MPHighlightable.json#" },
      { "$ref": "mixins/MPAttributable.json#" }
    ],
    "with": {
      "properties": {
        "objectType": {
          "type": "string",
          "enum": ["MPFigure"]
        },
        "contentType": {
          "type": "string"
        },
        "src": {
          "type": "string"
        },
        "originalURL": {
          "type": "string"
        },
        "embedURL": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "missingImage": {
          "description": "Indicate if the figure contains a missing image",
          "type": "boolean"
        },
        "position": {
          "type": "string"
        },
        "listingAttachment": { "$ref": "MPListingAttachmentReference.json#" },
        "externalFileReferences": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "$ref": "strings.json#/definitions/attachmentID"
              },
              "kind": {
                "$ref": "enums.json#/definitions/ExternalFileKind"
              }
            },
            "required": ["url"]
          }
        },
        "containedObjectIDs": {
          "type": "array",
          "description": "The IDs of the paragraphs contained within a figure",
          "items": {
            "$ref": "strings.json#/definitions/_id"
          },
          "additionalItems": false
        }
      },
      "required": []
    }
  }
}
