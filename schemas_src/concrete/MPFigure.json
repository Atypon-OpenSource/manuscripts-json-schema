{
  "$id": "MPFigure.json",
  "title": "Figure",
  "type": "object",
  "$mash": {
    "sources": [
      { "$ref": "abstract/MPModel.json#" },
      { "$ref": "mixins/MPContainedDocument.json#" },
      { "$ref": "mixins/MPManuscriptDocument.json#" },
      { "$ref": "mixins/MPAttachmentOwner.json#" },
      { "$ref": "mixins/MPHighlightable.json#" }
    ],
    "with": {
      "properties": {
        "objectType": {
          "type": "string",
          "enum": ["MPFigure"]
        },
        "contentType": {
          "type": "string"
        },
        "src": {
          "type": "string"
        },
        "originalURL": {
          "type": "string"
        },
        "mediaURL": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "credit": {
          "type": "string"
        },
        "listingAttachment": { "$ref": "MPListingAttachmentReference.json#" }
      },
      "required": []
    }
  }
