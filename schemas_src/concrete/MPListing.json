{
  "$id": "MPListing.json",
  "title": "Listing",
  "type": "object",
  "$mash": {
    "sources": [
      { "$ref": "abstract/MPModel.json#" },
      { "$ref": "mixins/MPContainedDocument.json#" },
      { "$ref": "mixins/MPManuscriptDocument.json#" },
      { "$ref": "mixins/MPAttachmentOwner.json#" },
      { "$ref": "mixins/MPHighlightable.json#" }
    ],
    "with": {
      "properties": {
        "objectType": {
          "type": "string",
          "enum": ["MPListing"]
        },
        "contents": {
          "type": "string"
        },
        "language": {
          "type": "string"
        },
        "languageKey": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "externalFileReferences": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "$ref": "strings.json#/definitions/uri"
              },
              "kind": {
                "$ref": "enums.json#/definitions/ExternalFileKind"
              }
            },
            "required": ["url"]
          }
        }
      },
      "required": ["contents", "languageKey"]
    }
  }
}
