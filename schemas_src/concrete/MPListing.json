{
  "$id": "MPListing.json",
  "title": "Listing",
  "type": "object",
  "$mash": {
    "sources": [
      { "$ref": "abstract/MPModel.json#" },
      { "$ref": "mixins/MPContainedDocument.json#" },
      { "$ref": "mixins/MPManuscriptDocument.json#" },
      { "$ref": "mixins/MPAttachmentOwner.json#" },
      { "$ref": "mixins/MPHighlightable.json#" }
    ],
    "with": {
      "properties": {
        "objectType": {
          "type": "string",
          "enum": ["MPListing"]
        },
        "contents": {
          "type": "string"
        },
        "language": {
          "type": "string"
        },
        "languageKey": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "externalFile": { "$ref": "MPExternalFile.json#" },
        "externalFiles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "_id": {
                "$ref": "strings.json#/definitions/_id"
              },
              "kind": {
                "type": "string"
              }
            },
            "required": ["_id", "kind"]
          }
        }
      },
      "required": ["contents", "languageKey"]
    }
  }
}
