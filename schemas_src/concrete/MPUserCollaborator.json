{
  "$id": "MPUserCollaborator.json",
  "title": "UserCollaborator",
  "type": "object",
  "$mash": {
    "sources": [{ "$ref": "abstract/MPModel.json#" }],
    "with": {
      "properties": {
        "objectType": {
          "type": "string",
          "enum": ["MPUserCollaborator"]
        },
        "userID": { "type": "string" },
        "collaboratorID": {
          "allOf": [
            {
              "$ref": "strings.json#/definitions/_id"
            },
            {
              "type": "string",
              "pattern": "^MPUserProfile:"
            }
          ]
        },
        "collaboratorProfile": {
          "$ref": "MPUserProfile.json#"
        }
      },
      "patternProperties": {
        "^(containers|projects)$": {
          "type": "object",
          "properties": {
            "owner": {
              "type": "array",
              "items": {
                "$ref": "strings.json#/definitions/containerID"
              }
            },
            "writer": {
              "type": "array",
              "items": {
                "$ref": "strings.json#/definitions/containerID"
              }
            },
            "editor": {
              "type": "array",
              "items": {
                "$ref": "strings.json#/definitions/containerID"
              }
            },
            "viewer": {
              "type": "array",
              "items": {
                "$ref": "strings.json#/definitions/containerID"
              }
            }
          }
        }
      },
      "required": [
        "userID",
        "collaboratorID",
        "collaboratorProfile"
      ]
    }
  }
}
