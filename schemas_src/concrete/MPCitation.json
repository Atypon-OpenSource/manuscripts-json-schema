{
  "$id": "MPCitation.json",
  "title": "Citation",
  "type": "object",
  "$mash": {
    "sources": [
      { "$ref": "abstract/MPExternalReference.json#" },
      { "$ref": "mixins/MPContainedDocument.json#" },
      { "$ref": "mixins/MPManuscriptDocument.json#" }
    ],
    "with": {
      "properties": {
        "embeddedCitationItems": {
          "type": "array",
          "items": {
            "$ref": "MPCitationItem.json#"
          }
        },
        "objectType": {
          "type": "string",
          "enum": ["MPCitation"]
        },
        "collationType": {
          "$ref": "enums.json#/definitions/MPCitationCollationType"
        },
        "citationStyle": {
          "allOf": [
            {
              "$ref": "strings.json#/definitions/_id"
            },
            {
              "type": "string",
              "pattern": "^MPBundle:"
            }
          ]
        },
        "displayScheme": {
          "type": "string",
          "enum": [
            "show-all",
            "author-only",
            "suppress-author"
          ]
        },
        "prefix": {
          "type": "string"
        },
        "suffix": {
          "type": "string"
        }
      },
      "required": ["embeddedCitationItems"]
    }
  }
}
