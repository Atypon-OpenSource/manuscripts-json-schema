{
  "$id": "MPFigureElement.json",
  "title": "FigureElement",
  "type": "object",
  "$mash": {
    "sources": [
      { "$ref": "abstract/MPAuxiliaryElement.json#" },
      { "$ref": "mixins/MPManuscriptDocument.json#" },
      { "$ref": "mixins/MPHighlightable.json#" }
    ],
    "with": {
      "properties": {
        "objectType": {
          "type": "string",
          "enum": ["MPFigureElement"]
        },
        "elementType": {
          "type": "string",
          "enum": ["figure"]
        },
        "figureLayout": {
          "allOf": [
            {
              "$ref": "strings.json#/definitions/_id"
            },
            {
              "type": "string",
              "pattern": "^MPFigureLayout:"
            }
          ]
        },
        "figureStyle": {
          "allOf": [
            {
              "$ref": "strings.json#/definitions/_id"
            },
            {
              "type": "string",
              "pattern": "^MPFigureStyle:"
            }
          ]
        },
        "sizeFraction": {
          "type": "number",
          "minimum": 0,
          "maximum": 2
        },
        "alignment": {
          "type": "string",
          "enum": ["left", "center", "right"]
        },
        "containedObjectIDs": {
          "type": "array",
          "items": {
            "$ref": "strings.json#/definitions/_id"
          },
          "additionalItems": false
        },
        "listingID": {
          "allOf": [
            {
              "$ref": "strings.json#/definitions/_id"
            },
            {
              "type": "string",
              "pattern": "^MPListing:"
            }
          ]
        }
      },
      "required": ["containedObjectIDs"]
    }
  }
}
