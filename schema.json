{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "http://manuscripts.io/schemas/schema.json",
  "type": "object",
  "properties": {
    "manuscript": {
      "type": "array",
      "items": {
        "type": "object"
      },
      "additionalItems": false
    },
    "sections": {
      "type": "array",
      "items": { "$ref": "section.json#" },
      "additionalItems": false
    }
  },
  "required": [
    "manuscript",
    "annotations",
    "bibliography",
    "analysis",
    "sections",
    "snapshots"
  ]
}
